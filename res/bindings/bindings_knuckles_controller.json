{
   "bindings" : {
      "/actions/mouse_synth": {
         "sources": [
            {
               "path": "/user/hand/right/input/a",
               "mode": "button",
               "inputs": {
                  "click": {
                     "output": "/actions/mouse_synth/in/left_click_right"
                  }
               }
            },
            {
               "path": "/user/hand/right/input/b",
               "mode": "button",
               "inputs": {
                  "click": {
                     "output": "/actions/mouse_synth/in/right_click_right"
                  }
               }
            },
            {
               "path": "/user/hand/left/input/a",
               "mode": "button",
               "inputs": {
                  "click": {
                     "output": "/actions/mouse_synth/in/left_click_left"
                  }
               }
            },
            {
               "path": "/user/hand/left/input/b",
               "mode": "button",
               "inputs": {
                  "click": {
                     "output": "/actions/mouse_synth/in/right_click_left"
                  }
               }
            },
            {
               "path": "/user/hand/left/input/trackpad",
               "mode": "trackpad",
               "inputs": {
                  "scroll": {
                     "output": "/actions/mouse_synth/in/scroll_left"
                  },
                  "position": {
                     "output": "/actions/mouse_synth/in/scroll_left"
                  }
               }
            },
            {
               "path": "/user/hand/right/input/trackpad",
               "mode": "trackpad",
               "inputs": {
                  "scroll": {
                     "output": "/actions/mouse_synth/in/scroll_right"
                  },
                  "position": {
                     "output": "/actions/mouse_synth/in/scroll_right"
                  }
               }
            }
         ]
      },
      "/actions/wm": {
         "poses": [
            {
               "output": "/actions/wm/in/hand_pose_right",
               "path": "/user/hand/right/pose/tip"
            },
            {
               "output": "/actions/wm/in/hand_pose_left",
               "path": "/user/hand/left/pose/tip"
            }
         ],
         "haptics": [
            {
               "output": "/actions/wm/out/haptic_right",
               "path": "/user/hand/right/output/haptic"
            },
            {
               "output": "/actions/wm/out/haptic_left",
               "path": "/user/hand/left/output/haptic"
            }
         ],
         "sources": [
            {
               "path": "/user/hand/right/input/trigger",
               "mode": "button",
               "inputs": {
                  "click": {
                     "output": "/actions/wm/in/grab_window_right"
                  }
               }
            },
            {
               "path": "/user/hand/right/input/grip",
               "mode": "force_sensor",
               "inputs": {
                  "force": {
                     "output": "/actions/wm/in/rotate_window_right"
                  }
               }
            },
            {
               "path": "/user/hand/right/input/trackpad",
               "mode": "trackpad",
               "inputs": {
                  "position": {
                     "output": "/actions/wm/in/push_pull_right"
                  },
                  "scroll": {
                     "output": "/actions/wm/in/push_pull_right"
                  }
               }
            },
            {
               "path": "/user/hand/left/input/trigger",
               "mode": "button",
               "inputs": {
                  "click": {
                     "output": "/actions/wm/in/grab_window_left"
                  }
               }
            },
            {
               "path": "/user/hand/left/input/grip",
               "mode": "force_sensor",
               "inputs": {
                  "force": {
                     "output": "/actions/wm/in/rotate_window_left"
                  }
               }
            },
            {
               "path": "/user/hand/left/input/trackpad",
               "mode": "trackpad",
               "inputs": {
                  "position": {
                     "output": "/actions/wm/in/push_pull_left"
                  },
                  "scroll": {
                     "output": "/actions/wm/in/push_pull_left"
                  }
               }
            },
            {
               "path": "/user/hand/left/input/thumbstick",
               "mode": "joystick",
               "inputs": {
                  "click": {
                     "output": "/actions/wm/in/show_keyboard_left"
                  },
                  "position": {
                     "output": "/actions/wm/in/push_pull_scale_left"
                  }
               }
            },
            {
               "path": "/user/hand/right/input/thumbstick",
               "mode": "joystick",
               "inputs": {
                  "click": {
                     "output": "/actions/wm/in/show_keyboard_right"
                  },
                  "position": {
                     "output": "/actions/wm/in/push_pull_scale_right"
                  }
               }
            }
         ]
      }
   },
   "controller_type" : "knuckles",
   "description" : "XR Desktop bindings for the Knuckles Controller",
   "name" : "XR Desktop Knuckles Controller"
}
